<h1>My Transactions</h1>
<% if @transactions.empty? %>
  <div class="alert alert-primary" role="alert">
    You don't have any transactions yet. Click the button below to send money to someone.
  </div>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Amount</th>
        <th>Initiated by</th>
        <th>From account</th>
        <th>To account</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.amount %></td>
          <td><%= transaction.initiated_by %></td>
          <td><%= transaction.from_account %></td>
          <td><%= transaction.to_account %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div id="transaction-modal"></div>

<%= link_to 'Send Money', new_transaction_path, remote: true, class: 'btn btn-primary btn-lg' %>
