<h1>My Transactions</h1>
<% if @transactions.empty? %>
  <div class="alert alert-primary" role="alert">
    You don't have any transactions yet. Click the button below to send money to someone.
  </div>
<% else %>
  <br>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Type</th>
        <th>From User</th>
        <th>From Account</th>
        <th>To User</th>
        <th>To Account</th>
        <th>Amount</th>
      </tr>
    </thead>

    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.transaction_type(current_user) %></td>
          <td><%= transaction.from_user.email %></td>
          <td><%= transaction.from_account.name %></td>
          <td><%= transaction.to_user.email %></td>
          <td><%= transaction.to_account.name %></td>
          <td><%= transaction.displayed_amount %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div id="transaction-modal"></div>

<%= link_to 'Send Money', new_transaction_path, remote: true, class: 'btn btn-primary btn-lg' %>
