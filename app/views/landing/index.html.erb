<h1>My Accounts</h1>
<% if @accounts.empty? %>
  <div class="alert alert-primary" role="alert">
    You don't have any accounts. Click the button below to create one.
  </div>
<% else %>
  <br>
  <div class="row">
    <% @accounts.each do |account| %>
      <div class="col-3">
        <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
          <div class="card-header">
            <%= account.currency %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= account.name %></h5>
            <h2 class="card-text">
              <%= account.amount %>
              <%= account.displayed_currency %>
            </h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
