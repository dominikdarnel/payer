<!DOCTYPE html>
<html>
  <head>
    <title>Payer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
      <%= link_to 'Payer', root_path, class: 'navbar-brand' %>
      <% if user_signed_in? %>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to 'Accounts', accounts_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Transactions', transactions_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Cards', cards_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>

    <div class="container">
      <% if notice %>
        <p class="alert alert-info"><%= notice %></p>
      <% elsif alert %>
        <p class="alert alert-warning"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
